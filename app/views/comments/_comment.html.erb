<% unless comment.parent_id %>
  <li>
    <p>
        <%= comment_user_avatar(comment) %>
      <span class='com-user'><%= comment.user.email %></span>
    </p>
    <p class='text-com'><%= comment.text %></p>
    <div id=<%= "reply_id_#{comment.id}"%>>
      <% if policy(comment).new? %>
        <%= link_to 'Reply', new_claim_comment_path(@claim.id, parent_id: comment.id), remote: true, class: 'lnk-rep' %>
      <% end %>
      <% if policy(comment).destroy? %>
        <%= link_to 'Delete', claim_comment_path(@claim.id, comment.id), method: :delete, class: 'del-com-lnk' %>
      <% end %>
    </div>
    <% unless comment.child.nil? %>
      <div class='replies'>
        <ul class='list-com'>
          <%= render partial: 'comments/reply', collection: comment.child, as: :comment %>
        </ul>
      </div>
    <% end %>
  </li>
<% end %>