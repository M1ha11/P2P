<div class='container-login'>
  <div class="card login-card">
    <div class='card-body'>
      <div class='card-title'>
        <h1 class='login-title'>Change your password</h1>        
      </div>
      <div class='login-card'>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="field">
            <%= f.label :password, "New password", class: 'label-login' %><br />
            <% if @minimum_password_length %>
              <em class='label-login'>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: 'New password', class: 'field-login' %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "Confirm new password", class: 'label-login' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm password', class: 'field-login' %>
          </div>

          <div class="actions submit-btn">
            <%= f.submit "Change my password", class: 'btn log-btn btn-lg btn-login' %>
          </div>
        <% end %>
      </div>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
