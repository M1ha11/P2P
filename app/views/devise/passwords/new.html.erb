<div class='container-login'>
  <div class="card login-card">
    <div class='card-body'>
      <div class='card-title'>
        <h1 class='login-title'>Forgot your password?</h1>        
      </div>
      <div class='login-card'>
    		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    		  <%= render "devise/shared/error_messages", resource: resource %>

    		  <div class="field">
            <%= f.label :email, class: 'label-login' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'field-login' %>
          </div>

    		  <div class="actions submit-btn">
    		    <%= f.submit "Send me reset password instructions", class: 'btn log-btn btn-lg btn-login' %>
    		  </div>
    		<% end %>
      </div>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>