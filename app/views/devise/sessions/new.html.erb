
<div class='container-login'>
  <div class="card login-card">
    <div class='card-body'>
      <div class='card-title'>
        <h1 class='login-title'><%= t('devise.sessions.title') %></h1>        
      </div>
      <div class='login-form'>
        <% if flash[:errors] %>
          <% flash[:errors].each do |e| %>
            <p><%=e%></p><br>
          <% end %>
        <% end %>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="field">
            <%= f.label :email, class: 'label-login' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('devise.sessions.placeholder.email'), class: 'field-login' %>
          </div>

          <div class="field">
            <%= f.label :password, class: 'label-login' %>
            <% if @minimum_password_length %>
            <em class='label-login'>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder: t('devise.sessions.placeholder.password'), class: 'field-login' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: 'label-login' %>
            </div>
          <% end %>

          <div class="actions submit-btn">
            <%= f.submit t('devise.sessions.submit'), class: 'btn log-btn btn-lg btn-login' %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>

<%= render 'devise/shared/omni_auth' %>
