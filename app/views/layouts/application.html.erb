<!DOCTYPE html>
<html>
  <head>
    <title>P2P</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class='navbar navbar-dark bg-dark'>
      <h1 class='title'>P2P</h1>
      <ul class='nav justify-content-center'>
        <% unless current_user %>
          <li class='nav-item'>
            <button type='button' class='btn btn-outline-success'>
              <%= link_to 'Log In', new_user_session_path, class: 'nav-log-btn' %>
            </button>
          </li>
          <li class='nav-item'>
            <button type='button' class='btn btn-outline-success'>
              <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-log-btn' %>
            </button>
          </li>
        <% else %>
          <li class='nav-item'>
            <button type='button' class='btn btn-outline-danger'>
              <%= link_to 'Log Out', destroy_user_session_path, class: 'nav-unlog-btn' %>
            </button>
          </li>
        <% end %>
      </ul>
    </nav>

    <%= yield %>

    <footer class='footer mt-auto py-3 bg-dark'>
      <div class='container text-center'>
        <span class='footer-text'>P2P</span>
      </div>
    </footer>
  </body>
</html>
